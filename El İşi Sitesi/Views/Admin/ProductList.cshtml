@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Ürün ekleme</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/product/create">Ürün Ekle</a>
        <table class="table table-bordered mt-3">
           
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td>Adı</td>
                    <td style="width: 20px;">Fiyat</td>
                    <td style="width: 20px;">Anasayfa</td>
                    <td style="width: 20px;">Onaylı</td>
                    <td style="width: 150px;"></td>
                </tr>
            
            
                @if(Model.Products.Count>0)
                {
                       @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td><img src="~/img/@item.ImageUrl" width="80"></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                
                              <td>
                                    <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                    
                                    <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                        <input type="hidden" name="productId" value="@item.ProductId">
                                        <button type="submit" class="btn btn-danger btn-sm">SİL</button>
                                    </form>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>Ürün yok</h3>
                    </div>
                }

             
            
        </table>
    </div>
</div>