@model WebOdevim.Models.Product
@* Aynı Create sayfası gibi bir sayfa olacak. *@
<form method="POST">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label for="Name">Ürün Adı:</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
    </div>
    <div class="form-group">
        <label for="Price">Ürün Fiyatı:</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
    </div>
    <div class="form-group">
        <label for="Description">Ürün Açıklaması:</label>
        <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="ImageUrl">Görsel Adresi: </label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategori Türü:</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
            <option selected disabled>Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>